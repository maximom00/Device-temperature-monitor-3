                updateChart: function(temp) {
                    const label = new Date().toLocaleTimeString();
                    
                    if (this.tempHistory.length >= this.MAX_HISTORY) {
                        this.tempHistory.shift();
                        this.chart.data.labels.shift();
                        this.chart.data.datasets[0].data.shift();
